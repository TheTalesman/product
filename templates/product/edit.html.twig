{% extends 'inc/base.html.twig' %}
{% block title %}
	Editar Produto
{% endblock %}
{%block body %}
	<div class="row">
		<div class="col">
			{{form_start(form)}}
			{{form_widget(form)}}

			{{form_end(form)}}

			<div id="hidTags" class="hidden">
				{% for tag in tags %}
					{{tag}},
				{% endfor %}
			</div>
		</div>

		<div class="col">
        	<a class="btn btn-light" href="#carouselExampleFade" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true">Prev</span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="btn btn-light" href="#carouselExampleFade" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true">Next</span>
					<span class="sr-only">Next</span>
				</a>
			<div id="carouselExampleFade" class="carousel carousel-fade" data-ride="carousel">
				<div class="carousel-inner">

					{% for image in images %}

						<div class="carousel-item">
							<img src={{image.path}} class="d-block w-100 img-fluid"/>
							<label class="label-prod">{{image.title}}</label>
						</div>
					{% endfor %}
				</div>
			
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}


	<script src="../../js/pullTags.js"></script>
{% endblock %}

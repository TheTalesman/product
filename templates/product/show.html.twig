{% extends 'inc/base.html.twig' %}
{% block title %}
	Produtos
{% endblock %}

{%block body %}
	<h1>{{product.title}}</h1>
	<p>{{product.description}}</p>
	<div class="container">
		<div class="row">
			{% for img in images %}
				<div class="col">
					<img width="200" src="../{{img.path}}"/>
					<label class="prod-label">{{img.title}}</label>
				</div>
			{% endfor %}
		</div>
	</div>
	<hr>
	<a href="../">Voltar</a>
{% endblock %}

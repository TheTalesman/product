{% extends 'base.html.twig' %}
{% block title %}
	Products
{% endblock %}

{%block body %}
	<h1>Products</h1>
    {{form(form)}}
	{% if products  %}
		<table id="table" class="table table-striped">
			<thead>
				<tr>
				<th>Image
					</th>
					<th>Product Title
					</th>
					<th>Description</th>
					<th>Price</th>
					<th>Stock</th>
				
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr>
						<td>
						{% if product.getImages() %}
						{% for img in product.getImages() %}
						<img  width=200 src="../{{img.path()}}" />
						{% endfor %}
						
							{% endif %}
						</td>
						<td>
							{{product.title}}
						</td>
						<td>
							{{product.description}}
						</td>
						<td>
							{{product.price}}
						</td>
						<td>
							{{product.stock}}
						</td>
						
					</tr>
				{% endfor %}
			</tbody>
		</table>

	{% else %}
		<p>No products to display</p>
	{% endif %}


{% endblock %}

{% extends 'inc/base.html.twig' %}
{% block title %}
	Top 10 Tags
{% endblock %}

{%block body %}
	<h1>	Top 10 Tags
</h1>

	{% if tags  %}
		<table id="table" class="table table-striped">
			<thead>
				<tr>
					<th>Tag Name
					</th>
					<th>Products
					</th>

				</tr>
			</thead>
			<tbody>
				{% for tag in tags %}
					
					<tr>
						<td>
							{{tag[0].name}}
						</td>
						<td>
						{{tag['cnt']}}
						
						</td>

					</tr>
				
				{% endfor %}
			</tbody>
		</table>

	{% else %}
		<p>No tags to display</p>
	{% endif %}


{% endblock %}
